@inherits BaseComponent
@using CRM.Data.Enums;
<div id="print">
    <h1 class="general-title">@OfferTypeEnum.HiringLiabilityInsurance.ToString().Translate()</h1>
    <div class="with-underline">
        <h6> @LocalizationExtension.Translate("CardComponent.OnlyInsured")</h6>
        <p>@DealModel?.Client?.FullConcatName</p>
    </div>
    <div class="with-underline">
        <h6>
            @("OfferModel.PinOrTin".Translate())
        </h6>
        @if (DealModel?.Client?.ClientType == ClientType.Company)
        {
            <p> @DealModel?.Client?.Documents?.FirstOrDefault(x => x.DocumentType == 2)?.DocumentNumber</p>
         }
        else
        {
            <p>@DealModel?.Client?.PinNumber</p>
        }
    </div>
    <div class="with-underline">
        <h6> @("Client.Beneficiary".Translate())</h6>
        <p>@OfferModel?.Beneficiary?.FullConcatName</p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.PaymentTypeOid".Translate())</h6>
        <p>@OfferModel?.PaymentType</p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.CurrencyOid".Translate())</h6>
        <p>@OfferModel?.Currency</p>
    </div>
    <div class="with-underline">
        <h6>  @("OfferModel.PolicyPeriodOid".Translate())</h6>
        <p>@OfferModel?.PolicyPeriod</p>
    </div>
    <div class="with-underline">
        <h6> @("DropDown.InsuranceAreaType".Translate())</h6>
        <p>@OfferModel?.InsuranceAreaTypeDisplayValue</p>
    </div>
    @if (DealModel?.Client?.ClientType == ClientType.Company)
    {
        <div class="with-underline">
            <h6>@("OfferModel.CompanyActivityType".Translate())</h6>
            <p>@OfferModel?.CompanyActivityType</p>
        </div>
    }
    <div class="with-underline">
        <h6>@("OfferModel.UnconditionalExemptionAmount".Translate())</h6>
        <p>@OfferModel?.UnconditionalExemptionAmount</p>
    </div>
    <div class="with-underline">
        <h6>@("OfferModel.SumInsured".Translate())</h6>
        <p>@DealModel?.SumInsured</p>
    </div>
    <div class="with-underline">
        <h6>  @("LanguageSelection".Translate())</h6>
        <p>@DealModel?.OfferLang</p>
    </div>

    <div class="with-underline">
        <h6> @("DealMode.ClientPhoneNumber".Translate())</h6>
        <p>@DealModel?.ClientPhoneNumber</p>
    </div>
    <div class="with-underline">
        <h6> @("DealMode.SurveyContactInfo".Translate())</h6>
        <p>@DealModel?.SurveyContactInfo</p>
    </div>


    <div class="with-underline">
        <div class="checkbox-group">
            <h6>@("OfferModel.IsAnyProductDangerous".Translate())</h6>
            @if (@OfferModel.ExplainDangerousProduct == null)
            {
                <div class="checkbox-container">
                    <div class="checkbox-container">
                        <div class="checkbox"></div>
                        <span>@("OfferModel.Yes".Translate())</span>
                    </div>
                    <div class="checkbox-container">
                        <div class="checkbox checked"></div>
                        <span>@("OfferModel.No".Translate())</span>
                    </div>
                </div>
            }
            else
            {
                <div class="checkbox-container">
                    <div class="checkbox-container">
                        <div class="checkbox checked"></div>
                        <span>@("OfferModel.Yes".Translate())</span>
                    </div>
                    <div class="checkbox-container">
                        <div class="checkbox "></div>
                        <span>@("OfferModel.No".Translate())</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="with-underline">
        <div class="checkbox-group">
            <h6>@("OfferModel.SpecialConditions".Translate())</h6>
            @if (OfferModel != null && OfferModel.IsAnyProductDangerous == true)
            {
                <div class="checkbox-container">
                    <div class="checkbox-container">
                        <div class="checkbox checked"></div>
                        <span>@("OfferModel.Yes".Translate())</span>
                    </div>
                    <div class="checkbox-container">
                        <div class="checkbox "></div>
                        <span>@("OfferModel.No".Translate())</span>
                    </div>
                </div>
            }
            else
            {
                <div class="checkbox-container">
                    <div class="checkbox-container">
                        <div class="checkbox"></div>
                        <span>@("OfferModel.Yes".Translate())</span>
                    </div>
                    <div class="checkbox-container">
                        <div class="checkbox checked"></div>
                        <span>@("OfferModel.No".Translate())</span>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (@OfferModel?.DistanceFromSea != null)
    {
        <div class="with-underline">
            <h6> @("OfferModel.DistanceFromSea".Translate())</h6>
            <p>@OfferModel?.DistanceFromSea</p>
        </div>
    }
    @if (@OfferModel?.TypeOfTransportation != null)
    {
        <div class="with-underline">
            <h6>  @("OfferModel.TypeOfTransportation".Translate())</h6>
            <p>@OfferModel?.TypeOfTransportation</p>
        </div>
    }
    @if (@OfferModel?.MaxTransportedEmployees != null)
    {
        <div class="with-underline">
            <h6> @("OfferModel.MaxTransportedEmployees".Translate())</h6>
            <p>@OfferModel?.MaxTransportedEmployees</p>
        </div>
    }
    @if (@OfferModel?.MaxEmployeesInSea != null)
    {
        <div class="with-underline">
            <h6>
                @(
					"OfferModel.MaxEmployeesInSea".Translate()
					)
            </h6>
            <p>@OfferModel?.MaxEmployeesInSea</p>
        </div>
    }
    @if (@OfferModel?.DaysPassedInSea != null)
    {
        <div class="with-underline">
            <h6>@("OfferModel.DaysPassedInSea".Translate())</h6>
            <p>@OfferModel?.DaysPassedInSea</p>
        </div>
    }

    <div class="with-underline">
        <h6> @("OfferModel.LimitPerPerson".Translate())</h6>
        <p>@OfferModel?.LimitPerPerson</p>
    </div>

    <div class="with-underline">
        <h6> @("OfferModel.LimitPerAccident".Translate())</h6>
        <p>@OfferModel?.LimitPerAccident</p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.AnnualGeneralLimit".Translate())</h6>
        <p>@OfferModel?.AnnualGeneralLimit</p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.ServantQuantity".Translate())</h6>
        <p>@OfferModel?.ServantQuantity</p>
    </div>

    <div class="with-underline">
        <h6> @("OfferModel.LaborQuantity".Translate())</h6>
        <p>@OfferModel?.LaborQuantity</p>
    </div>

    <div class="with-underline">
        <h6> @("OfferModel.ServantAnnualSalaryFond".Translate())</h6>
        <p>@OfferModel?.ServantAnnualSalaryFond</p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.LaborAnnualSalaryFond".Translate())</h6>
        <p>@OfferModel?.LaborAnnualSalaryFond</p>
    </div>

    <div class="with-underline">
        <h6> @("OfferModel.SeaWorkerQuantity".Translate())</h6>
        <p>@OfferModel?.SeaWorkerQuantity</p>
    </div>

    <div class="with-underline">
        <h6>  @("OfferModel.SeaWorkerAnnualSalaryFond".Translate())</h6>
        <p>@OfferModel?.SeaWorkerAnnualSalaryFond</p>
    </div>
    <div class="with-underline">
        <p>
            <h6>  @("OfferModel.GateGoodCondition".Translate())</h6>
            @OfferModel?.GateGoodCondition
        </p>
    </div>
    <div class="with-underline">
        <p>
            <h6>  @("OfferModel.ShowAcids".Translate())</h6>
            @OfferModel?.ShowAcids
        </p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.UnconditionalExemptionAmount".Translate())</h6>
        <p>@OfferModel?.UnconditionalExemptionAmount</p>
    </div>
    <div class="with-underline">
        <p>
            <h6> @("OfferModel.LostHistoryForTheLastFiveYears".Translate())</h6>
            @OfferModel?.LostHistoryForTheLastFiveYears
        </p>
    </div>

    <div class="with-underline">
        <p>
            <h6> @("OfferModel.AnyInfo".Translate())</h6>
            @OfferModel?.AnyInfo
        </p>
    </div>
    <div class="sign-area">

        <div class="sign-title-container">
            <h6 class="sign-title">@LocalizationExtension.Translate("CardComponent.OnlyInsured")</h6>
            <span>@DealModel?.Client?.FullConcatName</span>
        </div>

        <div class="sign-container">
            <span>@LocalizationExtension.Translate("CardComponent.OnlyInsured")</span>
            <div class="sign-line"></div>
            <span>@LocalizationExtension.Translate("CardComponent.Signature")</span>
        </div>
    </div>

</div>


