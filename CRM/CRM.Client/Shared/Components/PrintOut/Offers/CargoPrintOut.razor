    </div>
    <div class="with-underline">
        <h6> @("OfferModel.Commission".Translate())</h6>
        <p>@OfferModel?.Commission</p>
    </div>


    @******@
    <div class="with-underline">
        <h6>@("OfferModel.CargoDescription".Translate())</h6>
        <p>@OfferModel?.CargoDescription</p>
    </div>
    <div class="with-underline">
        <h6>@("OfferModel.InvoiceAmountOfCargo".Translate())</h6>
        <p>@OfferModel?.InvoiceAmountOfCargo</p>
    </div>
    <div class="with-underline">
        <h6> @("OfferModel.InvoiceDate".Translate())</h6>
