    <div class="with-underline">
        <h6> @("OfferModel.Packaging".Translate())</h6>
        <p>@OfferModel?.PackagingName</p>
    </div>
    @if (!string.IsNullOrEmpty(OfferModel?.PackagingOther))
    {
        <div class="with-underline">
            <h6> @("OfferModel.PackagingOther".Translate())</h6>
            <p>@OfferModel?.PackagingOther</p>
        </div>
