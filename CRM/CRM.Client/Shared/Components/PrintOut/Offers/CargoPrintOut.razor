    <div class="with-underline">
        <h6>  @("DealMode.ClientPhoneNumber".Translate())</h6>
        <p>@DealModel?.ClientPhoneNumber</p>
    </div>
    <div class="with-underline">
        <h6> @("DealMode.SurveyContactInfo".Translate())</h6>
