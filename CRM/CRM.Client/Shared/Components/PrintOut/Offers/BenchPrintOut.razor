            }
            else
            {
                <div class="checkbox-container">
                    <div class="checkbox"></div>
                    <span>@("OfferModel.Yes".Translate())</span>
                </div>
                <div class="checkbox-container">
                    <div class="checkbox checked"></div>
                    <span>@("OfferModel.No".Translate())</span>
                </div>
            }
        </div>
    </div>

    <div class="with-underline">
        <div class="checkbox-group">
            <h6>@("OfferModel.SpecialConditions".Translate())</h6>
            @if (OfferModel?.SpecialConditions == true)
            {
                <div class="checkbox-container">
                    <div class="checkbox checked"></div>
                    <span>@("OfferModel.Yes".Translate())</span>
                </div>
                <div class="checkbox-container">
                    <div class="checkbox "></div>
                    <span>@("OfferModel.No".Translate())</span>
                </div>
            }
            else
            {
                <div class="checkbox-container">
                    <div class="checkbox"></div>
                    <span>@("OfferModel.Yes".Translate())</span>
                </div>
                <div class="checkbox-container">
                    <div class="checkbox checked"></div>
                    <span>@("OfferModel.No".Translate())</span>
                </div>
            }
        </div>
    </div>

    <div class="sign-area">

        <div class="sign-title-container">
            <h6 class="sign-title">@LocalizationExtension.Translate("CardComponent.OnlyInsured")</h6>
            <span>@DealModel?.Client?.FullConcatName</span>
        </div>

        <div class="sign-container">
            <span>@LocalizationExtension.Translate("CardComponent.InsuredPerson")</span>
            <div class="sign-line"></div>
            <span>@LocalizationExtension.Translate("CardComponent.Signature")</span>
        </div>
