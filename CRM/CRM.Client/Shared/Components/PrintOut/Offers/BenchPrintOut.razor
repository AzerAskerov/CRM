    <div class="with-underline">
        <h6>   @("OfferModel.Series".Translate())</h6>
        <p>@OfferModel?.Series</p>
    </div>
    <div class="with-underline">
        <h6>  @("OfferModel.Type".Translate())</h6>
        <p>@OfferModel?.Type</p>
    </div>
    <div class="with-underline">
