    </div>
    <div class="with-underline">
        <h6>     @("OfferModel.Year".Translate())</h6>
        <p>@OfferModel?.Year</p>
    </div>
    <div class="with-underline">
        <h6>@("OfferModel.AnyUsefulInfoForInsuranceCompany".Translate())</h6>
        <p>@OfferModel?.AnyUsefulInfoForInsuranceCompany</p>
    </div>

    <div class="with-underline">
        <h6>  @("OfferModel.LastThreeYearsBenchInjuryKnowledge".Translate())</h6>

        <div class="checkbox-group">
            @if (OfferModel?.LastThreeYearsInjuryKnowledge == true)
            {
                <div class="checkbox-container">
                    <div class="checkbox checked"></div>
                    <span>@("OfferModel.Yes".Translate())</span>
                </div>
                <div class="checkbox-container">
                    <div class="checkbox "></div>
                    <span>@("OfferModel.No".Translate())</span>
                </div>
            }
            else
            {
                <div class="checkbox-container">
                    <div class="checkbox "></div>
                    <span>@("OfferModel.Yes".Translate())</span>
                </div>
                <div class="checkbox-container">
                    <div class="checkbox checked"></div>
                    <span>@("OfferModel.No".Translate())</span>
                </div>
            }
        </div>
