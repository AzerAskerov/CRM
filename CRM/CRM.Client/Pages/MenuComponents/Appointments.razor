@page "/appointments"
@inherits BaseComponent
@attribute [Authorize]

<CustomTitle Main="Appointments"></CustomTitle>


<div class="container-fluid">
    <div class="row">
        <div class="content-contact-page">
            <div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100vh;'>
                <div class="dhx_cal_navline">
                    <div class="d-flex align-items-center">
                        <div class="dhx_cal_prev_button">&nbsp;</div>
                        <div class="dhx_cal_date"></div>
                        <div class="dhx_cal_next_button">&nbsp;</div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="dhx_cal_today_button"></div>
                        <div class="dhx_cal_date_container">
                            <div class="dhx_cal_tab" name="day_tab"></div>
                            <div class="dhx_cal_tab" name="week_tab"></div>
                            <div class="dhx_cal_tab" name="month_tab"></div>
                        </div>
                    </div>
                </div>
                <div class="dhx_cal_header"></div>
                <div class="dhx_cal_data"></div>
            </div>
        </div>
    </div>
</div>
<AppointmentCard></AppointmentCard>

<style>
    .dhx_cal_event_clear {
        height: 40px;
        white-space: normal;
    }

    .dhx_cal_event_line {
        height: 36px;
    }

    /*event in day or week view*/
    .dhx_cal_event.active_event div {
        background-color: #009966 !important;
        color: black !important;
    }

    .dhx_cal_event.cancelled_event div {
        background-color: #FF9933 !important;
        color: black !important;
    }

    /*multi-day event in month view*/
    .dhx_cal_event_line.active_event {
        background-color: #009966 !important;
        color: black !important;
    }

    .dhx_cal_event_line.cancelled_event {
        background-color: #FF9933 !important;
        color: black !important;
    }

    /*event with fixed time, in month view*/
    .dhx_cal_event_clear.active_event {
        color: black !important;
    }

    .dhx_cal_event_clear.cancelled_event {
        color: black !important;
    }

    table tr td > div:first-child {
        font-size: 20px;
        color: rgb(69, 46, 219);
    }

    .dhx_month_head {
        padding: 15px 15px 0 0;
    }

    .dhx_cal_data table tr td {
        position: relative !important;
        cursor: pointer;
    }

    .dhx_cal_data .dhx_month_head {
        position: absolute;
        right: 0;
    }

    .day_tab {
        border-radius: 5px 0 0 5px;
    }

    .month_tab {
        border-radius: 0 5px 5px 0;
    }
</style>

